<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <data>
        <variable
            name="bookingDetailsViewModel"
            type="com.htf.diva.dashboard.viewModel.BookingDetailsViewModel" />
        <import type="android.view.View" />
    </data>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <include
            android:id="@+id/llTop"
            layout="@layout/toolbar" />


        <androidx.core.widget.NestedScrollView
            android:layout_below="@+id/llTop"
            android:layout_above="@+id/btnPayableAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_marginStart="@dimen/dimen_5"
                        android:layout_marginEnd="@dimen/dimen_5"
                        android:padding="@dimen/dimen_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_8dp"
                        android:orientation="horizontal">

                        <com.github.siyamed.shapeimageview.RoundedImageView
                            android:id="@+id/ivCenterImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:siBorderColor="@color/white"
                            android:src="@drawable/user"
                            app:siRadius="@dimen/dimen_10" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/dimen_5"
                            android:padding="@dimen/dimen_5">

                            <TextView
                                android:id="@+id/tvFitnessCenterName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/font_13sp"
                                android:text="Badr Branch"
                                android:textColor="@color/colorPrimaryDark"
                                android:fontFamily="@font/avenir_black" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">


                                <TextView
                                    android:layout_marginTop="@dimen/margin_4dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/booking_date"
                                    android:textSize="@dimen/font_12sp"
                                    android:textColor="@color/colorTextLightDark"
                                    android:fontFamily="@font/avenir_black" />

                                <TextView
                                    android:layout_marginTop="@dimen/margin_4dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:layout_marginStart="@dimen/margin_8dp"
                                    android:textSize="@dimen/font_12sp"
                                    android:textColor="@color/colorTextHeading"
                                    android:fontFamily="@font/avenir_black" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="@dimen/margin_8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/tvBookingDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/font_12sp"
                                    android:text=""
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:fontFamily="@font/avenir_light" />

                                <TextView
                                    android:id="@+id/tvPackage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dimen_5"
                                    android:textSize="@dimen/font_12sp"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:text=""
                                    android:textColor="@color/colorPrimaryDark"
                                    android:fontFamily="@font/avenir_black" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>


                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="@dimen/margin_16dp"
                            android:padding="@dimen/dimen_7">

                            <ImageView
                                android:layout_width="@dimen/dimen_10"
                                android:layout_height="@dimen/dimen_10"
                                android:src="@drawable/location"
                                android:layout_gravity="center_vertical"/>

                            <TextView
                                android:id="@+id/tvFitnessCenterAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="@dimen/font_12sp"
                                android:textColor="@color/colorHeadingText"
                                android:fontFamily="@font/avenir_light"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/dimen_5"/>

                        </LinearLayout>

                        <TextView
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/view_direction"
                            android:paddingBottom="@dimen/margin_8dp"
                            android:paddingStart="@dimen/margin_24dp"
                            android:paddingTop="@dimen/margin_8dp"
                            android:paddingEnd="@dimen/margin_24dp"
                            android:layout_marginEnd="@dimen/margin_16dp"
                            android:textSize="@dimen/font_12sp"
                            android:background="@drawable/view_direction_age_bg"
                            android:fontFamily="@font/avenir_black"
                            android:textColor="@color/colorAccent"/>


                    </RelativeLayout>



                    <LinearLayout
                        android:layout_marginTop="@dimen/margin_16dp"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/llTenure"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="@dimen/dimen_40"
                                android:layout_height="@dimen/dimen_40"
                                android:padding="8dp"
                                android:src="@drawable/calendar">

                            </ImageView>

                            <LinearLayout
                                android:layout_marginTop="@dimen/margin_8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tenure"
                                    android:textSize="@dimen/font_12sp"
                                    android:singleLine="true"
                                    android:fontFamily="@font/avenir_black"
                                    android:textColor="@color/gray5"/>

                                <TextView
                                    android:id="@+id/tvTenure"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:text=""
                                    android:layout_marginTop="5dp"
                                    android:textSize="@dimen/font_12sp"
                                    android:fontFamily="@font/avenir_black"
                                    android:textColor="@color/colorPrimaryDark"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llJoining"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/dimen_50"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="@dimen/dimen_40"
                                android:layout_height="@dimen/dimen_40"
                                android:padding="8dp"
                                android:src="@drawable/ic_joining_from">

                            </ImageView>

                            <LinearLayout
                                android:layout_marginTop="@dimen/margin_8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/joining_from"
                                    android:textSize="@dimen/font_12sp"
                                    android:singleLine="true"
                                    android:fontFamily="@font/avenir_black"
                                    android:textColor="@color/gray5"/>

                                <TextView
                                    android:id="@+id/tvJoining_from"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:text=""
                                    android:layout_marginTop="5dp"
                                    android:textSize="@dimen/font_12sp"
                                    android:fontFamily="@font/avenir_black"
                                    android:textColor="@color/colorPrimaryDark"/>

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llPackage"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/margin_24dp"
                        android:layout_marginBottom="@dimen/margin_16dp"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="@dimen/dimen_40"
                            android:layout_height="@dimen/dimen_40"
                            android:padding="8dp"
                            android:src="@drawable/ic_resource_package">

                        </ImageView>

                        <LinearLayout
                            android:layout_marginTop="@dimen/margin_8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/packages"
                                android:textSize="@dimen/font_12sp"
                                android:singleLine="true"
                                android:fontFamily="@font/avenir_black"
                                android:textColor="@color/gray5"/>

                            <TextView
                                android:id="@+id/tvPackages"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text=""
                                android:layout_marginTop="5dp"
                                android:textSize="@dimen/font_12sp"
                                android:fontFamily="@font/avenir_black"
                                android:textColor="@color/colorPrimaryDark"/>

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llPeople"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/margin_24dp"
                        android:layout_marginBottom="@dimen/margin_16dp"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="@dimen/dimen_40"
                            android:layout_height="@dimen/dimen_40"
                            android:padding="8dp"
                            android:src="@drawable/people">

                        </ImageView>

                        <LinearLayout
                            android:layout_marginTop="@dimen/margin_8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/people"
                                android:textSize="@dimen/font_12sp"
                                android:singleLine="true"
                                android:fontFamily="@font/avenir_black"
                                android:textColor="@color/gray5"/>

                            <TextView
                                android:id="@+id/tvNo_ofPeople"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text=""
                                android:layout_marginTop="5dp"
                                android:textSize="@dimen/font_12sp"
                                android:fontFamily="@font/avenir_black"
                                android:textColor="@color/colorPrimaryDark"/>

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>




                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/llPersonalTrainer"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:id="@+id/lnrTrainer"
                        android:layout_width="match_parent"
                        android:background="@color/colorAgeBg"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_16dp"
                        android:layout_marginBottom="@dimen/margin_8dp"
                        android:padding="@dimen/dimen_7"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_marginStart="@dimen/margin_16dp"
                            android:layout_marginEnd="@dimen/margin_16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <com.github.siyamed.shapeimageview.RoundedImageView
                                android:id="@+id/ivTrainerImage"
                                android:layout_width="@dimen/dimen_50"
                                android:layout_height="@dimen/dimen_50"
                                app:siBorderColor="@color/white"
                                android:layout_alignParentStart="true"
                                android:src="@drawable/user"
                                app:siRadius="@dimen/dimen_30" />

                            <LinearLayout
                                android:id="@+id/lnrTrainerDetail"
                                android:layout_toEndOf="@+id/ivTrainerImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="@dimen/dimen_5"
                                android:padding="@dimen/dimen_5">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/font_14sp"
                                    android:text="@string/personal_trainer"
                                    android:textColor="@color/colorTextLightDark"
                                    android:fontFamily="@font/avenir_black" />

                                <TextView
                                    android:id="@+id/tvTrainerName"
                                    android:layout_marginTop="@dimen/margin_4dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="@dimen/font_14sp"
                                    android:textColor="@color/colorPrimary"
                                    android:fontFamily="@font/avenir_black" />

                            </LinearLayout>

                            <TextView
                                android:layout_alignParentEnd="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cancel_pt"
                                android:paddingBottom="@dimen/margin_8dp"
                                android:paddingStart="@dimen/margin_24dp"
                                android:paddingTop="@dimen/margin_8dp"
                                android:paddingEnd="@dimen/margin_24dp"
                                android:layout_marginEnd="@dimen/margin_16dp"
                                android:textSize="@dimen/font_12sp"
                                android:backgroundTint="@color/colorBranchBg1"
                                android:background="@drawable/view_direction_age_bg"
                                android:fontFamily="@font/avenir_black"
                                android:textColor="@color/colorAccent"/>



                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llSlots"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAgeBg"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/avenir_black"
                            android:padding="10dp"
                            android:textAlignment="textStart"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:text="@string/selected_slots"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="12sp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvSelectedSlots"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_5"/>

                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_black"
                        android:textAlignment="textStart"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:layout_marginTop="@dimen/margin_8dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/personal_trainer"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="12sp" />

                    <RelativeLayout
                        android:id="@+id/rlPersonalTrainer"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/margin_8dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:layout_marginEnd="@dimen/margin_16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/avenir_light"
                            android:text="@string/personal_trainer"
                            android:textColor="@color/colorTextLightDark"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvPersonal_trainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/avenir_black"
                            android:text="SAR 400"
                            android:textAllCaps="true"
                            android:textColor="@color/colorTextLightDark"
                            android:textSize="13sp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rlVat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_16dp"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:layout_marginTop="@dimen/margin_8dp">

                        <TextView
                            android:id="@+id/tvTax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/avenir_light"
                            android:text="Vat 5%"
                            android:textColor="@color/colorTextLightDark"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvTaxCharges"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/avenir_black"
                            android:text="SAR 20"
                            android:textAllCaps="true"
                            android:textColor="@color/colorTextLightDark"
                            android:textSize="13sp" />

                    </RelativeLayout>


                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/llBookingPackages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/gray2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/avenir_black"
                            android:textAlignment="textStart"
                            android:layout_marginEnd="@dimen/margin_16dp"
                            android:layout_marginStart="@dimen/margin_16dp"
                            android:layout_marginTop="@dimen/margin_8dp"
                            android:text="@string/packages"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="12sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_16dp"
                            android:layout_marginStart="@dimen/margin_16dp"
                            android:layout_marginTop="@dimen/margin_8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:fontFamily="@font/avenir_light"
                                android:text="plus one month package"
                                android:layout_marginTop="@dimen/margin_8dp"
                                android:textColor="@color/colorTextLightDark"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvPackage_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="@font/avenir_black"
                                android:text="SAR 200"
                                android:textAllCaps="true"
                                android:textColor="@color/colorTextLightDark"
                                android:textSize="13sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlPackageVat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_16dp"
                            android:layout_marginStart="@dimen/margin_16dp"
                            android:layout_marginTop="@dimen/margin_8dp">

                            <TextView
                                android:id="@+id/tvPackageTax"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:fontFamily="@font/avenir_light"
                                android:text="Vat 5%"
                                android:textColor="@color/colorTextLightDark"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvPackageTaxCharges"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="@font/avenir_black"
                                android:text="SAR 20"
                                android:textAllCaps="true"
                                android:textColor="@color/colorTextLightDark"
                                android:textSize="13sp" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/gray2" />

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_16dp"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:layout_marginTop="@dimen/margin_8dp"
                        android:paddingBottom="@dimen/margin_8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/avenir_light"
                            android:text="@string/payable_amt"
                            android:textColor="@color/colorTextHeading"
                            android:textSize="@dimen/font_16sp" />

                        <TextView
                            android:id="@+id/tvPayable_amt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/avenir_black"
                            android:textAllCaps="true"
                            android:textColor="@color/colorTextHeading"
                            android:textSize="@dimen/font_16sp" />

                    </RelativeLayout>


                 </LinearLayout>




            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


        <LinearLayout
            android:id="@+id/btnPayableAmount"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8dp"
                android:background="@drawable/btn_bg"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorAgeBg"
                android:gravity="center"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:fontFamily="@font/avenir_roman"
                android:paddingStart="@dimen/margin_4dp"
                android:paddingTop="@dimen/margin_12dp"
                android:paddingEnd="@dimen/margin_4dp"
                android:paddingBottom="@dimen/margin_12dp"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:text="@string/download_invoice"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textAllCaps="false"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8dp"
                android:background="@drawable/btn_bg"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:fontFamily="@font/avenir_roman"
                android:paddingStart="@dimen/margin_4dp"
                android:paddingTop="@dimen/margin_12dp"
                android:paddingEnd="@dimen/margin_4dp"
                android:paddingBottom="@dimen/margin_12dp"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:text="@string/rate_now"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textAllCaps="false"/>


        </LinearLayout>



    </RelativeLayout>


</layout>
