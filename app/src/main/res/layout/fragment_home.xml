<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="homeFragmentViewModel"
            type="com.htf.diva.dashboard.viewModel.HomeViewModel" />
        <import type="android.view.View" />
    </data>


    <LinearLayout
        android:id="@+id/llMain"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dimen_10"
            android:paddingEnd="@dimen/dimen_10"
            android:paddingBottom="@dimen/dimen_5">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/tvHeyMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/font_16sp"
                    android:layout_gravity="start"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/avenir_black"/>

                <TextView
                    android:id="@+id/tvWelcomeMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_to_diva_fitness"
                    android:textSize="@dimen/font_14sp"
                    android:layout_gravity="start"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/avenir_light"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llOffer"
                android:layout_width="@dimen/dimen_120"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_10"
                android:background="@drawable/discount_rect_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_15"
                    android:layout_height="@dimen/dimen_15"
                    android:src="@drawable/offer"
                    android:layout_gravity="center_vertical"/>


                <TextView
                    android:id="@+id/tvOfferMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:maxLines="2"
                    android:textSize="@dimen/font_12sp"
                    android:layout_marginStart="@dimen/dimen_5"
                    android:layout_gravity="start"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorMembershipExpiredBg"
                    android:fontFamily="@font/avenir_light"/>

            </LinearLayout>

        </RelativeLayout>


    <androidx.core.widget.NestedScrollView
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:fillViewport="true"
            android:id="@+id/nested"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vpBanner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_150" />

                <com.zhpan.indicator.IndicatorView
                    android:id="@+id/indicator_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_marginStart="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llMembershipExpired"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/dimen_10"
                        android:background="@drawable/rating_bg"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:layout_marginEnd="@dimen/dimen_10"
                        android:visibility="gone"
                        android:backgroundTint="@color/colorMembershipExpiredBg">

                        <ImageView
                            android:layout_width="@dimen/dimen_30"
                            android:layout_height="@dimen/dimen_30"
                            android:src="@drawable/expired"
                            android:layout_gravity="top"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/dimen_10">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/your_membership_has_been_expired"
                                android:textColor="@color/white"
                                android:fontFamily="@font/avenir_light"
                                android:textSize="@dimen/font_13sp"
                                android:layout_gravity="start"
                                android:textAlignment="viewStart"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="on 20 november 2020"
                                android:textColor="@color/white"
                                android:fontFamily="@font/avenir_light"
                                android:textSize="@dimen/font_11sp"
                                android:layout_gravity="start"
                                android:textAlignment="viewStart"/>


                            <TextView
                                android:id="@+id/tvRenewPlan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rating_bg"
                                android:backgroundTint="@color/white"
                                android:text="@string/renew_plan"
                                android:layout_marginTop="@dimen/dimen_5"
                                android:padding="@dimen/dimen_7"
                                android:textSize="@dimen/font_10sp"
                                android:textColor="@color/colorMembershipExpiredBg"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnrMyWorkout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:layout_marginEnd="@dimen/dimen_10"
                        android:background="@drawable/rating_bg"
                        android:backgroundTint="@color/colorPrimary"
                        android:padding="@dimen/dimen_10"
                        android:layout_marginTop="@dimen/dimen_10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.dinuscxj.progressbar.CircleProgressBar
                                android:id="@+id/workoutProgress"
                                android:layout_width="@dimen/dimen_50"
                                android:layout_height="@dimen/dimen_50"
                                android:layout_gravity="center"
                                app:progress_background_color="@color/colorTodayWorkOutText"
                                app:progress_blur_style="outer"
                                app:progress_end_color="@color/colorScheduleCircularProgressBg"
                                app:progress_shader="radial"
                                app:progress_start_color="@color/colorScheduleCircularProgressBg"
                                app:progress_stroke_cap="round"
                                app:progress_stroke_width="@dimen/dimen_7"
                                app:progress_style="solid_line"
                                app:progress_text_color="@color/colorScheduleCircularProgressBg" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="3"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/dimen_10">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:gravity="center">

                                    <me.grantland.widget.AutofitTextView
                                        android:id="@+id/tvCalsLeft"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:maxLines="1"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/font_11sp"
                                        android:fontFamily="@font/avenir_black"/>

                                    <me.grantland.widget.AutofitTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/cals_left"
                                        android:textColor="@color/white"
                                        android:maxLines="1"
                                        android:textSize="@dimen/font_9sp"
                                        android:fontFamily="@font/avenir_light"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:gravity="center">

                                    <me.grantland.widget.AutofitTextView
                                        android:id="@+id/tvConsumed"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:maxLines="1"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/font_11sp"
                                        android:fontFamily="@font/avenir_black"/>

                                    <me.grantland.widget.AutofitTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/consumed"
                                        android:textColor="@color/white"
                                        android:maxLines="1"
                                        android:textSize="@dimen/font_9sp"
                                        android:fontFamily="@font/avenir_light"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:gravity="center">

                                    <me.grantland.widget.AutofitTextView
                                        android:id="@+id/tvBurned"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:maxLines="1"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/font_11sp"
                                        android:fontFamily="@font/avenir_black"/>

                                    <me.grantland.widget.AutofitTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/burns"
                                        android:textColor="@color/white"
                                        android:maxLines="1"
                                        android:textSize="@dimen/font_9sp"
                                        android:fontFamily="@font/avenir_light"/>

                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="4"
                            android:layout_marginTop="@dimen/dimen_7">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:gravity="center">

                                <me.grantland.widget.AutofitTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/proteins"
                                    android:maxLines="1"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/font_9sp"
                                    android:fontFamily="@font/avenir_light"/>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">


                                    <me.grantland.widget.AutofitTextView
                                        android:id="@+id/tvDietConsumedProtien"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="60kg"
                                        android:textColor="@color/white"
                                        android:maxLines="1"
                                        android:textSize="@dimen/font_9sp"
                                        android:fontFamily="@font/avenir_black"/>

                                    <TextView
                                        android:text="/"
                                        android:textColor="@color/white"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                    </TextView>

                                    <me.grantland.widget.AutofitTextView
                                        android:id="@+id/tvPlanProtien"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="60kg"
                                        android:textColor="@color/white"
                                        android:maxLines="1"
                                        android:textSize="@dimen/font_9sp"
                                        android:fontFamily="@font/avenir_black"/>

                                </LinearLayout>



                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:gravity="center">

                                <me.grantland.widget.AutofitTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/carbs"
                                    android:maxLines="1"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/font_9sp"
                                    android:fontFamily="@font/avenir_light"/>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">


                                    <me.grantland.widget.AutofitTextView
                                        android:id="@+id/tvDietConsumedCabs"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="60kg"
                                        android:textColor="@color/white"
                                        android:maxLines="1"
                                        android:textSize="@dimen/font_9sp"
                                        android:fontFamily="@font/avenir_black"/>

                                    <TextView
                                        android:text="/"
                                        android:textColor="@color/white"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                    </TextView>

                                    <me.grantland.widget.AutofitTextView
                                        android:id="@+id/tvPlanCabs"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="60kg"
                                        android:textColor="@color/white"
                                        android:maxLines="1"
                                        android:textSize="@dimen/font_9sp"
                                        android:fontFamily="@font/avenir_black"/>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:gravity="center">

                                <me.grantland.widget.AutofitTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/fats"
                                    android:maxLines="1"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/font_9sp"
                                    android:fontFamily="@font/avenir_light"/>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">


                                    <me.grantland.widget.AutofitTextView
                                        android:id="@+id/tvDietConsumedFat"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="60kg"
                                        android:textColor="@color/white"
                                        android:maxLines="1"
                                        android:textSize="@dimen/font_9sp"
                                        android:fontFamily="@font/avenir_black"/>

                                    <TextView
                                        android:text="/"
                                        android:textColor="@color/white"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                    </TextView>

                                    <me.grantland.widget.AutofitTextView
                                        android:id="@+id/tvPlanFat"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="60kg"
                                        android:textColor="@color/white"
                                        android:maxLines="1"
                                        android:textSize="@dimen/font_9sp"
                                        android:fontFamily="@font/avenir_black"/>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:gravity="center">

                                <me.grantland.widget.AutofitTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/calories"
                                    android:maxLines="1"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/font_9sp"
                                    android:fontFamily="@font/avenir_light"/>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">


                                    <me.grantland.widget.AutofitTextView
                                        android:id="@+id/tvDietConsumedCalories"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="60kg"
                                        android:textColor="@color/white"
                                        android:maxLines="1"
                                        android:textSize="@dimen/font_9sp"
                                        android:fontFamily="@font/avenir_black"/>

                                    <TextView
                                        android:text="/"
                                        android:textColor="@color/white"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                    </TextView>

                                    <me.grantland.widget.AutofitTextView
                                        android:id="@+id/tvPlanCalories"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="60kg"
                                        android:textColor="@color/white"
                                        android:maxLines="1"
                                        android:textSize="@dimen/font_9sp"
                                        android:fontFamily="@font/avenir_black"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llTopPersonalTrainers"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <RelativeLayout
                            android:id="@+id/rlTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dimen_10"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:layout_marginStart="@dimen/dimen_10">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:text="@string/top_personal_trainers"
                                android:fontFamily="@font/avenir_black"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/font_12sp" />

                            <TextView
                                android:id="@+id/btnViewAll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/avenir_light"
                                android:text="@string/view_all"
                                android:padding="@dimen/dimen_10"
                                android:textColor="@color/colorPrimary"
                                android:background="@drawable/btn_bg"
                                android:backgroundTint="@color/colorViewAllBg"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:textSize="@dimen/font_10sp" />

                        </RelativeLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvPersonalTrainers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:orientation="horizontal" />


                        <LinearLayout
                            android:id="@+id/llBuyMembership"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_bg"
                            android:backgroundTint="@color/colorViewAllBg"
                            android:layout_marginTop="@dimen/margin_16dp"
                            android:layout_marginStart="@dimen/dimen_10"
                            android:layout_marginEnd="@dimen/dimen_10"
                            android:padding="@dimen/dimen_10"
                            android:gravity="center"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="@dimen/dimen_20"
                                android:layout_height="@dimen/dimen_20"
                                android:src="@drawable/membership"
                                app:tint="@color/colorPrimary"
                                android:layout_gravity="center_vertical"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/buy_membership"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_marginStart="@dimen/dimen_10"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/font_13sp"
                                android:fontFamily="@font/avenir_black"/>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/dimen_7">

                            <RelativeLayout
                                android:id="@+id/rlTitleOurCenter"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dimen_10"
                                android:padding="@dimen/dimen_10">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:text="@string/our_fitness_center"
                                    android:fontFamily="@font/avenir_black"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="@dimen/font_12sp" />


                            </RelativeLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvFitnessCenter"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                />

                        </LinearLayout>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_roman"
                        android:gravity="end"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/colorWhite"
                        android:visibility="gone" />



                </LinearLayout>


            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


    </LinearLayout>




</layout>