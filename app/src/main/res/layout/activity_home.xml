<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="homeViewModel"
            type="com.htf.diva.dashboard.viewModel.HomeViewModel" />

        <import type="android.view.View" />

    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_24">

        <LinearLayout
            android:id="@+id/llTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dimen_5"
                android:paddingTop="@dimen/dimen_10"
                android:paddingEnd="@dimen/dimen_5">

                <ImageView
                    android:id="@+id/ivMenu"
                    android:layout_width="@dimen/dimen_50"
                    android:layout_height="@dimen/dimen_50"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/dimen_10"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/menu" />

                <LinearLayout
                    android:id="@+id/llEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/ivNotification"
                        android:layout_width="@dimen/dimen_50"
                        android:layout_height="@dimen/dimen_50"
                        android:padding="@dimen/dimen_12"
                        android:src="@drawable/notification" />

                    <com.github.siyamed.shapeimageview.RoundedImageView
                        android:id="@+id/ivUser"
                        app:siRadius="@dimen/dimen_20"
                        android:layout_marginEnd="@dimen/margin_8dp"
                        android:layout_marginTop="@dimen/dimen_12"
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"
                        android:src="@drawable/user" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dimen_10"
                android:paddingEnd="@dimen/dimen_10"
                android:paddingBottom="@dimen/dimen_5">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/tvHeyMsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hey,Rehab"
                        android:textSize="@dimen/font_14sp"
                        android:layout_gravity="start"
                        android:textAlignment="viewStart"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/avenir_black"/>

                    <TextView
                        android:id="@+id/tvWelcomeMsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hey,Rehab"
                        android:textSize="@dimen/font_12sp"
                        android:layout_gravity="start"
                        android:textAlignment="viewStart"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/avenir_light"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/dimen_10"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:background="@drawable/discount_rect_bg"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen_15"
                        android:layout_height="@dimen/dimen_15"
                        android:src="@drawable/offer"
                        android:layout_gravity="center_vertical"/>


                    <TextView
                        android:id="@+id/tvOfferMsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hey,Rehab"
                        android:maxLines="2"
                        android:textSize="@dimen/font_12sp"
                        android:layout_marginStart="@dimen/dimen_5"
                        android:layout_gravity="start"
                        android:textAlignment="viewStart"
                        android:textColor="@color/colorMembershipExpiredBg"
                        android:fontFamily="@font/avenir_light"/>

                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/llTop"
            android:layout_above="@id/llBottom"/>

        <FrameLayout
            android:id="@+id/llBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:id="@+id/lnrLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_selected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_15"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <com.simform.custombottomnavigation.SSCustomBottomNavigation
                android:id="@+id/bottomNavigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:ss_backgroundBottomColor="@color/white"
                app:ss_waveHeight="7"
                app:ss_rippleColor="@color/colorWhite"
                app:ss_defaultIconColor="@color/colorText"
                app:ss_iconTextColor="@color/colorPrimary"
                app:ss_iconTextSize="@dimen/font_10sp"
                app:ss_selectedIconColor="@color/colorPrimary"
                app:ss_selectedIconTextColor="@color/colorPrimary"/>

        </FrameLayout>


    </RelativeLayout>
</layout>