<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="specialisingModel"
            type="com.htf.diva.models.Specialization" />

        <import type="android.view.View"/>
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/dimen_60"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="@dimen/dimen_5"
        android:padding="@dimen/dimen_5">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/specialising_bg"
            android:padding="@dimen/dimen_7">

            <ImageView
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"
                android:src="@drawable/boxing"
                specialisingImage="@{specialisingModel.image}"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Boxing"
            android:gravity="center"
            userName="@{specialisingModel.name}"
            android:textSize="@dimen/font_12sp"
            android:textColor="@color/colorText"
            android:fontFamily="@font/avenir_light"
            android:paddingTop="@dimen/dimen_5"
            android:layout_gravity="center"
            android:textAlignment="center"/>

    </LinearLayout>


</layout>



