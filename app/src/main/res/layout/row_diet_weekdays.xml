<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="dietWeekDays"
            type="com.htf.diva.models.DietWeekdayModel" />
        <import type="android.view.View"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_5"
        android:layout_marginEnd="@dimen/dimen_5"
        android:layout_marginTop="@dimen/dimen_5"
        android:padding="@dimen/dimen_7"
        android:orientation="vertical"
        android:background="@drawable/diet_weekdays_stroke_bg">

        <RelativeLayout
            android:id="@+id/rltToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dimen_5"
            android:paddingEnd="@dimen/dimen_5">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_alignParentStart="true"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/font_18sp"
                    android:textColor="@color/black"
                    userName="@{dietWeekDays.name}"
                    android:padding="@dimen/dimen_12"
                    android:fontFamily="@font/avenir_black"
                    android:text="@string/my_diet_plan" />

            </LinearLayout>


            <LinearLayout
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="@dimen/dimen_50"
                    android:layout_height="@dimen/dimen_50"
                    android:padding="@dimen/dimen_10"
                    android:src="@drawable/ic_drop_down" />

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>


</layout>

