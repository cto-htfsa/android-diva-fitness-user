<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_30">

        <LinearLayout
            android:id="@+id/llnrLogin"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/ivUser"
                android:layout_width="@dimen/dimen_50"
                android:layout_height="@dimen/dimen_50"
                android:padding="@dimen/dimen_10"
                android:layout_gravity="center_vertical"
                android:src="@drawable/diva_place_holder" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginStart="@dimen/dimen_10"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_16sp"
                    android:fontFamily="@font/avenir_black"/>

                <TextView
                    android:id="@+id/tvMobileVersion"
                    android:layout_gravity="center"
                    android:fontFamily="@font/avenir_light"
                    android:text=""
                    android:textSize="@dimen/font_12sp"
                    android:textAlignment="center"
                    android:gravity="center"
                    style="@style/MenuText"/>

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_16dp"
            android:text="@string/login"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16sp"
            android:fontFamily="@font/avenir_black"/>

        <ImageView
            android:id="@+id/btnCancel"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:padding="@dimen/dimen_7"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/cancel_3"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/llTop"
        android:paddingStart="10dp"
        android:paddingTop="10dp">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llProfileInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/profile" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:layout_gravity="start"
                            android:fontFamily="@font/avenir_light"
                            android:text="@string/my_profile"
                            android:textAlignment="viewStart"
                            style="@style/MenuText"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="@dimen/dimen_50"
                            android:background="@color/white" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llChangeDietPlan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/diet_3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:layout_gravity="start"
                            android:fontFamily="@font/avenir_light"
                            android:text="@string/change_diet_plan"
                            android:textAlignment="viewStart"
                            style="@style/MenuText"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="@dimen/dimen_50"
                            android:background="@color/white" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llChangeWorkoutPlan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/workout_3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:layout_gravity="start"
                            android:fontFamily="@font/avenir_light"
                            android:text="@string/change_workout_plan"
                            android:textAlignment="viewStart"
                            style="@style/MenuText"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="@dimen/dimen_50"
                            android:background="@color/white" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llPaymentHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/payment_history" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:layout_gravity="start"
                            android:fontFamily="@font/avenir_light"
                            android:text="@string/payment_history"
                            android:textAlignment="viewStart"
                            style="@style/MenuText"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="@dimen/dimen_50"
                            android:background="@color/white" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llShareApp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/share" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:layout_gravity="start"
                            android:fontFamily="@font/avenir_light"
                            android:text="@string/share_app"
                            android:textAlignment="viewStart"
                            style="@style/MenuText"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="@dimen/dimen_50"
                            android:background="@color/white" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llRateApp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/rate" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:layout_gravity="start"
                            android:fontFamily="@font/avenir_light"
                            android:text="@string/rate_app"
                            android:textAlignment="viewStart"
                            style="@style/MenuText"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="@dimen/dimen_50"
                            android:background="@color/white" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCustomerSupport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/customer" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:layout_gravity="start"
                            android:fontFamily="@font/avenir_light"
                            android:text="@string/customer_support"
                            android:textAlignment="viewStart"
                            style="@style/MenuText"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="@dimen/dimen_50"
                            android:background="@color/white" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llAbout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/about" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:layout_gravity="start"
                            android:fontFamily="@font/avenir_light"
                            android:text="@string/about_app"
                            android:textAlignment="viewStart"
                            style="@style/MenuText"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="@dimen/dimen_50"
                            android:background="@color/white"
                            android:visibility="visible"/>

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        app:tint="@color/colorWhite"
                        android:layout_marginTop="@dimen/margin_4dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/logout" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:layout_gravity="start"
                            android:fontFamily="@font/avenir_light"
                            android:text="@string/logout"
                            android:textAlignment="viewStart"
                            style="@style/MenuText"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="@dimen/dimen_50"
                            android:background="@color/white"
                            android:visibility="gone"/>

                    </LinearLayout>
                </LinearLayout>






            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/avenir_light"
                android:text="@string/poweredby_htf"
                android:gravity="center"
                />

            <ImageView
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:layout_gravity="center_vertical"
                android:src="@drawable/white_htf" />


        </LinearLayout>


        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@drawable/btn_bg"
            android:backgroundTint="@color/colorLogOutBg"
            android:layout_marginStart="@dimen/dimen_70"
            android:layout_marginEnd="@dimen/dimen_70"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:fontFamily="@font/avenir_black"
            android:paddingStart="@dimen/margin_4dp"
            android:paddingTop="@dimen/margin_12dp"
            android:paddingEnd="@dimen/margin_4dp"
            android:paddingBottom="@dimen/margin_12dp"
            android:layout_marginBottom="@dimen/dimen_20"
            android:text="@string/logout"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textAllCaps="false">

        </Button>



    </LinearLayout>

</RelativeLayout>