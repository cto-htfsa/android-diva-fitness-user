<LinearLayout android:backgroundTint="@color/colorBranchBg3"
    android:textColor="@color/colorRatingBg"
    android:background="@drawable/btn_bg"
    android:orientation="vertical"
    android:visibility="visible"
    android:layout_marginStart="@dimen/margin_8dp"
    android:layout_marginEnd="@dimen/margin_8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:text="@string/you_have_a_booking_with_personal_trainer"
        android:fontFamily="@font/avenir_black"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/font_12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:text="@string/did_not_have_booking_schedule_session"
        android:fontFamily="@font/avenir_light"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/font_12sp" />

    <RelativeLayout
        android:layout_marginEnd="@dimen/margin_16dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/ivTrainerImage"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_50"
            app:siBorderColor="@color/white"
            android:layout_alignParentStart="true"
            android:src="@drawable/user"
            app:siRadius="@dimen/dimen_30" />

        <LinearLayout
            android:id="@+id/lnrTrainerDetail"
            android:layout_toEndOf="@+id/ivTrainerImage"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/margin_8dp">

            <TextView
                android:id="@+id/tvTrainerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/font_14sp"
                android:text="@string/personal_trainer"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/avenir_black" />


        </LinearLayout>

        <TextView
            android:id="@+id/tvManageSession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_white_manage_session"
            android:layout_alignParentEnd="true"
            android:paddingStart="@dimen/dimen_12"
            android:paddingEnd="@dimen/dimen_12"
            android:paddingTop="@dimen/margin_8dp"
            android:paddingBottom="@dimen/margin_8dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/margin_8dp"
            android:text="Manage Session"
            android:textSize="@dimen/font_12sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/avenir_black" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remove"
            android:textSize="@dimen/font_14sp"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorTextRed"
            android:paddingTop="@dimen/dimen_5"
            android:paddingBottom="@dimen/dimen_5"
            android:fontFamily="@font/avenir_light"
            android:paddingStart="@dimen/dimen_15"
            android:paddingEnd="@dimen/dimen_15"
            android:visibility="gone"
            android:background="@drawable/remove_bg"
            android:drawablePadding="@dimen/margin_8dp"
            app:drawableTint="@color/red"
            app:drawableStartCompat="@drawable/cancel" />


    </RelativeLayout>



</LinearLayout>
