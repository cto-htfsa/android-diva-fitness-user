<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:id="@+id/rltCenter"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_35"
        android:layout_margin="@dimen/dimen_5"
        android:background="@drawable/rect_unselected_fitness_center"
        android:elevation="@dimen/dimen_3"
        android:paddingEnd="@dimen/dimen_25"
        android:paddingStart="@dimen/dimen_25">

        <TextView
            android:id="@+id/tvFitnessCenterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Al Badr"
            android:layout_gravity="center"
            android:fontFamily="@font/avenir_black"
            android:textSize="@dimen/font_12sp"
            android:layout_centerInParent="true"
            android:textAlignment="center"/>

    </LinearLayout>

</LinearLayout>

